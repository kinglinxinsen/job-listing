<h1> Add a job </h1>
<%= simple_form_for @job do |f| %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>
<%= f.input :category, label: "职位种类", collection: ["工程师"], as: :check_boxes, checked: @job.category %>
<%= f.submit "Submit"%>
<% end %>
